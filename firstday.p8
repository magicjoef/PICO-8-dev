pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
function _init()
 make_player()
end

function _update()
 move_player()
end

function _draw()
	cls()
 draw_player()
end


function make_player()
 px=64
 py=64
 psprite=1
end

function move_player()
 if (btn(0)) px-=1 --left
 if (btn(1)) px+=1 --right
 if (btn(2)) py-=1 --up
 if (btn(3)) py+=1 --down
end

function draw_player()
 spr(psprite,px,py)
end

